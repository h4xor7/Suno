<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Suno" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/surface_neu</item>
        <item name="colorPrimaryVariant">@color/action_bar_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="backgroundColor">@color/surface_neu</item>
        <item name="colorSurface">@color/green_test</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orangeDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Suno.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">@color/surface_neu</item>


    </style>

    <style name="Theme.Suno.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/action_bar_color</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orangeDark</item>
    </style>

    <style name="Theme.Suno.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Dark">
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
</resources>